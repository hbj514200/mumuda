<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >


    <TextView
        android:id="@+id/item_title"
        android:lineSpacingMultiplier="1.05"
        android:padding="2dp"
        android:paddingRight="6dp"
        android:ellipsize="end"
        android:layout_marginTop="6dp"
        android:layout_alignLeft="@id/item_qian"
        android:layout_alignParentTop="true"
        android:textColor="#333333"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/im_loading"
        android:id="@+id/item_imageview"
        android:layout_below="@id/item_xiangqin"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_qian"
        android:layout_marginLeft="6dp"
        android:layout_alignLeft="@id/item_imageview"
        android:layout_below="@id/item_imageview"
        android:padding="1dp"
        android:textSize="23sp"
        android:textColor="#fa2651"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="-2dp"
        android:id="@+id/item_juan"
        android:layout_alignLeft="@id/item_qian"
        android:layout_below="@id/item_qian"
        android:textColor="#828282"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_xiangqin"
        android:lineSpacingMultiplier="1.05"
        android:padding="2dp"
        android:paddingRight="6dp"
        android:ellipsize="end"
        android:layout_marginBottom="8dp"
        android:layout_alignLeft="@id/item_qian"
        android:layout_below="@id/item_title"
        android:textColor="@color/tool_text_hui"
        android:layout_centerVertical="true"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:textSize="17sp"
        android:id="@+id/item_buy_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="14dp"
        android:layout_alignTop="@id/item_qian"
        android:text=" 立即购买 "
        android:textColor="#fffcfc"
        android:background="@drawable/article_goumai_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

</RelativeLayout>
