<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 这和那个标准的item一模一样，  只是去掉了大layout 的背景色，  优化了过度绘制 -->

    <ImageView
        android:src="@drawable/im_loading"
        android:id="@+id/item_imageview"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="6dp"
        android:layout_alignLeft="@id/item_imageview"
        android:id="@+id/item_qian"
        android:layout_below="@id/item_imageview"
        android:padding="1dp"
        android:textSize="20sp"
        android:textColor="#d15d22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_juan"
        android:layout_alignLeft="@id/item_qian"
        android:layout_below="@id/item_qian"
        android:textColor="#fb5375"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_xiangqin"
        android:lineSpacingMultiplier="1.05"
        android:padding="2dp"
        android:paddingRight="6dp"
        android:ellipsize="end"
        android:layout_marginBottom="8dp"
        android:layout_alignLeft="@id/item_qian"
        android:layout_below="@id/item_juan"
        android:maxLines="2"
        android:textColor="@color/tool_text_hui"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_tiaomao"
        android:layout_marginRight="8dp"
        android:padding="1.3dp"
        android:layout_alignTop="@id/item_juan"
        android:layout_alignParentRight="true"
        android:textColor="#fff9fa"
        android:background="#fb456a"
        android:textSize="11sp"
        android:layout_marginTop="-2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="15"
        android:id="@+id/item_yuanjia"
        android:layout_marginRight="8dp"
        android:padding="3dp"
        android:layout_alignTop="@id/item_qian"
        android:layout_alignParentRight="true"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
