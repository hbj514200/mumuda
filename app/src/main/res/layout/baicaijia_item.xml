<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_imageview"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/item_qian"
        android:layout_toRightOf="@id/item_imageview"
        android:padding="5dp"
        android:text="¥ 7"
        android:textSize="15sp"
        android:textColor="#d15d22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_juan"
        android:paddingBottom="5dp"
        android:layout_alignLeft="@id/item_qian"
        android:layout_below="@id/item_qian"
        android:textColor="#fb5375"
        android:text="30"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_xiangqin"
        android:lineSpacingMultiplier="1.05"
        android:paddingRight="10dp"
        android:layout_alignLeft="@id/item_qian"
        android:layout_marginTop="5dp"
        android:layout_below="@id/item_juan"
        android:maxLines="2"
        android:textColor="@color/tool_text_hui"
        android:layout_centerVertical="true"
        android:textSize="11sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_tiaomao"
        android:layout_marginRight="8dp"
        android:padding="1.3dp"
        android:layout_alignTop="@id/item_juan"
        android:layout_alignParentRight="true"
        android:textColor="#fff9fa"
        android:background="#fb456a"
        android:text="天猫"
        android:textSize="9sp"
        android:layout_marginTop="-2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_yuanjia"
        android:layout_marginRight="8dp"
        android:padding="3dp"
        android:layout_alignTop="@id/item_qian"
        android:layout_alignParentRight="true"
        android:text="15"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
