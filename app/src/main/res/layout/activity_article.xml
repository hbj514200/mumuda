<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4" >

    <ScrollView
        android:id="@+id/content_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <RelativeLayout
                android:id="@+id/content_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff" >

                <ImageView
                    android:src="@drawable/im_loading"
                    android:id="@+id/item_imageview"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_title"
                    android:lineSpacingMultiplier="1.05"
                    android:padding="8dp"
                    android:ellipsize="end"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@id/item_imageview"
                    android:maxLines="3"
                    android:textColor="#343434"
                    android:layout_centerVertical="true"
                    android:textSize="21sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_xiangqin"
                    android:lineSpacingMultiplier="1.05"
                    android:padding="8dp"
                    android:ellipsize="end"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@id/item_title"
                    android:textColor="#808080"
                    android:layout_centerVertical="true"
                    android:textSize="19sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <fragment
                android:id="@+id/content_grid_fragment"
                android:layout_below="@id/content_content"
                android:name="immd.yxd.com.immd.article_listview_Fragment"
                android:layout_width="match_parent"
                android:layout_height="6000dp" />

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/dibu_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#f7f7f7"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/tab_back"
            android:padding="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/tab_back"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:padding="3dp"
            android:layout_alignParentEnd="true"
            android:textSize="17sp"
            android:id="@+id/item_dianzan_num"
            android:text="1000"
            android:textColor="#f8607f"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/dianzan_xin"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/item_dianzan_num"
            android:layout_width="29dp"
            android:layout_height="29dp"/>
    </RelativeLayout>

</RelativeLayout>
